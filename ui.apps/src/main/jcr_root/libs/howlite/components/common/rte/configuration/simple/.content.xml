<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="sling:OrderedFolder"
          sling:resourceType="wcm/dialogs/components/richtext/configuration">
    <bold jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/richtext/ui/button"
          title="Bold"
          icon="format_bold">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/bold"/>
    </bold>
    <italic jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/richtext/ui/button"
            title="Italic"
            icon="format_italic">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/italic"/>
    </italic>
    <underline jcr:primaryType="nt:unstructured"
               sling:resourceType="wcm/dialogs/components/richtext/ui/button"
               title="Underline"
               icon="format_underlined">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/underline"/>
    </underline>
    <strikethrough jcr:primaryType="nt:unstructured"
                   sling:resourceType="wcm/dialogs/components/richtext/ui/button"
                   title="Strikethrough"
                   icon="format_strikethrough">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/strikethrough"/>
    </strikethrough>
    <link jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/richtext/ui/link"
          title="Link"
          icon="link">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/link"/>
    </link>
    <hardbreak jcr:primaryType="nt:unstructured"
               sling:resourceType="wcm/dialogs/components/richtext/ui/button"
               title="New Line"
               icon="subdirectory_arrow_left">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/hardbreak"/>
    </hardbreak>
    <clearformatting jcr:primaryType="nt:unstructured"
                     sling:resourceType="wcm/dialogs/components/richtext/ui/button"
                     title="Clear Formatting"
                     icon="format_clear">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/clearformatting"/>
    </clearformatting>
    <undo jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/richtext/ui/button"
          title="Undo"
          icon="undo">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/undo"/>
    </undo>
    <redo jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/components/richtext/ui/button"
          title="Redo"
          icon="redo">
        <plugin jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/richtext/plugin/redo"/>
    </redo>
</jcr:root>
