<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
    <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tabs">
        <generalTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="General">
            <quoteText
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/richtext"
                    name="quoteText"
                    required="true"
                    label="Text"/>
            <authorName
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="authorName"
                    label="Author’s name"/>
            <authorDescription
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="authorDescription"
                    label="Author’s description"/>
            <image
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/toggle"
                name="showImage"
                label="Author’s image"/>
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/container">
                <authorImage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/assetreference"
                        mimeTypes="[image/*]"
                        name="authorImage"
                        label="Author’s image"/>
                <imageAlt
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/textfield"
                        name="imageAlt"
                        label="Alt text"/>
                <ws:display
                        jcr:primaryType="nt:unstructured">
                        <condition
                              jcr:primaryType="nt:unstructured"
                              sourceName="showImage"
                              values="true"/>
                </ws:display>
            </container>
        </generalTab>
        <styleTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="Style">
            <cssClasses
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/select"
                    label="Style variants"
                    name="classes">
                <default
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/select/selectitem"
                        label="Default"
                        selected="true"
                        value=""/>
                <small
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/select/selectitem"
                        label="Smaller"
                        value="hl-quote--smaller"/>
            </cssClasses>
        </styleTab>
        <gridTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/include"
                path="/libs/howlite/components/common/gridTab"/>
    </tabs>
</jcr:root>
