<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="wcm/dialogs/dialog">
    <tabs
            jcr:primaryType="nt:unstructured"
            sling:resourceType="wcm/dialogs/components/tabs">
        <generalTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/tab"
                label="General">
            <lgImageSrc
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/assetreference"
                    mimeTypes="[image/*]"
                    name="lgImageSrc"
                    description="L breakpoint image will be used also on smaller screens if only this source is provided"
                    label="Choose image - L breakpoint"/>
            <mdImageSrc
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/assetreference"
                    mimeTypes="[image/*]"
                    name="mdImageSrc"
                    label="Choose image - M breakpoint"/>
            <smImageSrc
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/assetreference"
                    mimeTypes="[image/*]"
                    name="smImageSrc"
                    label="Choose image - S breakpoint"/>
            <alt
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/dialogs/components/textfield"
                    name="alt"
                    label="Alt text"/>
            <showLink
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/toggle"
                name="showLink"
                label="Link"/>
            <container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/container">
                <url
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/pathpicker"
                        rootPath="/content"
                        name="url"
                        label="URL"/>
                <openInNewTab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="wcm/dialogs/components/toggle"
                        name="openInNewTab"
                        label="Open link in a new tab"/>
                <ws:display
                    jcr:primaryType="nt:unstructured">
                    <condition
                          jcr:primaryType="nt:unstructured"
                          sourceName="showLink"
                          values="true"/>
                </ws:display>
            </container>
        </generalTab>
        <gridTab
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/dialogs/components/include"
                path="/libs/howlite/components/common/gridTab"/>
    </tabs>
</jcr:root>
