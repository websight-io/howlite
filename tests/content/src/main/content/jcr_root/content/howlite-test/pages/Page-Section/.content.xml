<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="ws:Page">
    <jcr:content
        jcr:primaryType="ws:PageContent"
        jcr:title="Page Section"
        sling:resourceType="howlite/components/page"
        ws:template="/libs/howlite/templates/contentpage">
        <rootcontainer
            jcr:primaryType="nt:unstructured"
            sling:resourceType="howlite/components/rootcontainer/fixedrootcontainer">
            <header
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/headerreference"/>
            <maincontainer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/maincontainer">
                <pagesection
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection"/>
                <pagesection_1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection"
                    backgroundImageLg="/content/howlite-test/assets/landscape.jpg">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/title"
                        headingLevel="h2"
                        headingSize="hl-title__heading--size-1"
                        lgColSize="6"
                        lgColStart="4"
                        showSubtitle="true"
                        subtitle="Page Section with a background image (L)"
                        title="Image should be visible on L breakpoint"/>
                </pagesection_1>
                <pagesection_1_1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection"
                    backgroundImageMd="/content/howlite-test/assets/landscape.jpg"
                    backgroundImageSm="/content/howlite-test/assets/landscape.jpg">
                    <title_1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/title"
                        headingLevel="h2"
                        headingSize="hl-title__heading--size-1"
                        lgColSize="6"
                        lgColStart="4"
                        showSubtitle="true"
                        subtitle="Page Section with a background image (S &amp; M)"
                        title="Image should NOT be visible on L breakpoint"/>
                </pagesection_1_1>
            </maincontainer>
            <footer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/footerreference"/>
        </rootcontainer>
    </jcr:content>
</jcr:root>
