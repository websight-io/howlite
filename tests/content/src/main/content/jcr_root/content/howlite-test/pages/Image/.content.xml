<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="ws:Page">
    <jcr:content
        jcr:primaryType="ws:PageContent"
        jcr:title="Image"
        sling:resourceType="howlite/components/page"
        ws:template="/libs/howlite/templates/contentpage">
        <rootcontainer
            jcr:primaryType="nt:unstructured"
            sling:resourceType="howlite/components/rootcontainer/fixedrootcontainer">
            <header
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/headerreference"/>
            <maincontainer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/maincontainer">
                <pagesection
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/title"
                        headingLevel="h2"
                        headingSize="hl-title__heading--size-4"
                        showSubtitle="false"
                        title="Image placeholder:"/>
                    <image_1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/image"
                        lgColSize="12"
                        showLink="false"/>
                </pagesection>
                <pagesection_1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/title"
                        headingLevel="h2"
                        headingSize="hl-title__heading--size-4"
                        showSubtitle="false"
                        title="Image with broken asset path:"/>
                    <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/image"
                        lgImageSrc="/content/howlite-test/assets/non-existent.jpg"
                        showLink="false"/>
                </pagesection_1>
                <pagesection_1_1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/title"
                        headingLevel="h2"
                        headingSize="hl-title__heading--size-4"
                        showSubtitle="false"
                        title="Image wider than grid width"/>
                    <richtext
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/richtext"
                        lgColSize="8"
                        lgColStart="3"
                        mdColSize="8"
                        mdColStart="3"
                        text="&lt;p>Original asset is 1200px wide, but it should be shrinked to grid width (2 columns in this case).&lt;/p>"/>
                    <image_1
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/image"
                        lgColSize="2"
                        lgColStart="6"
                        lgImageSrc="/content/howlite-test/assets/landscape.jpg"
                        mdColSize="2"
                        mdColStart="6"
                        showLink="false"
                        smColSize="2"
                        smColStart="6"/>
                </pagesection_1_1>
                <pagesection_1_1_1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/title"
                        headingLevel="h2"
                        headingSize="hl-title__heading--size-4"
                        showSubtitle="false"
                        title="Image smaller then grid width"/>
                    <richtext
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/richtext"
                        lgColSize="8"
                        mdColSize="8"
                        mdColStart="3"
                        smColStart="3"
                        text="&lt;p>Original asset is 300px wide and it should not stretch to grid width (12 columns). Image should never stretch above original asset width. Blue overlay should have grid width (12 columns in this case).&lt;/p>"/>
                    <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/image"
                        lgColSize="12"
                        lgColStart="1"
                        lgImageSrc="/content/howlite-test/assets/portrait.jpg"
                        mdColSize="12"
                        mdColStart="1"
                        showLink="false"
                        smColSize="12"/>
                </pagesection_1_1_1>
                <pagesection_1_1_1_1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection">
                    <title
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/title"
                        headingLevel="h2"
                        headingSize="hl-title__heading--size-4"
                        showSubtitle="false"
                        title="Image with link"/>
                    <richtext
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/richtext"
                        lgColSize="8"
                        mdColSize="8"
                        mdColStart="3"
                        smColStart="3"
                        text="&lt;p>Image link should have asset width (it should not stretch to grid width, only asset area should be clickable on preview).&lt;/p>"/>
                    <image
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/image"
                        lgColSize="12"
                        lgImageSrc="/content/howlite-test/assets/portrait.jpg"
                        mdColSize="12"
                        openInNewTab="false"
                        showLink="true"
                        smColSize="12"
                        url="https://www.google.com"/>
                </pagesection_1_1_1_1>
            </maincontainer>
            <footer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/footerreference"/>
        </rootcontainer>
    </jcr:content>
</jcr:root>
