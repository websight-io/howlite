<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0" xmlns:ws="http://ds.pl/websight" xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    jcr:primaryType="ws:Page">
    <jcr:content
        jcr:primaryType="ws:PageContent"
        jcr:title="Accordion"
        sling:resourceType="howlite/components/page"
        ws:template="/libs/howlite/templates/contentpage">
        <rootcontainer
            jcr:primaryType="nt:unstructured"
            sling:resourceType="howlite/components/rootcontainer/fixedrootcontainer">
            <header
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/headerreference"/>
            <maincontainer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/maincontainer">
                <pagesection
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection">
                    <accordion
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/accordion">
                        <accordionitem1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="howlite/components/accordion/accordionitem"
                            content="&lt;p>Sample text&lt;/p>"
                            title="Sample title"/>
                        <accordionitem2
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="howlite/components/accordion/accordionitem"/>
                        <accordionitem3
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="howlite/components/accordion/accordionitem"/>
                    </accordion>
                </pagesection>
                <pagesection_1
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection">
                    <accordion
                        jcr:primaryType="nt:unstructured"
                        lgColSize="8"
                        mdColSize="10"
                        smColsize="10"
                        lgOffset="2"
                        mdOffset="1"
                        smOffset="1"
                        sling:resourceType="howlite/components/accordion"/>
                </pagesection_1>
                <pagesection_2
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="howlite/components/pagesection">
                    <accordion
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="howlite/components/accordion"
                        lgColSize="6"
                        mdColSize="10"
                        smColsize="10"
                        lgOffset="3"
                        mdOffset="1"
                        smOffset="1">
                        <accordionitem1
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="howlite/components/accordion/accordionitem"
                            title="Accordion component with 6 columns width on L breakpoint"/>
                        <accordionitem2
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="howlite/components/accordion/accordionitem"/>
                        <accordionitem3
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="howlite/components/accordion/accordionitem"/>
                    </accordion>
                </pagesection_2>
            </maincontainer>
            <footer
                jcr:primaryType="nt:unstructured"
                sling:resourceType="howlite/components/footerreference"/>
        </rootcontainer>
    </jcr:content>
</jcr:root>
