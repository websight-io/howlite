{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "dialogText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "text",
        "label": "Text",
        "required": true,
        "ws:disallowedContext": ["edit:panel"]
      },
      "panelText": {
        "sling:resourceType": "wcm/dialogs/components/richtext",
        "name": "text",
        "label": "Text",
        "required": true,
        "ws:disallowedContext": ["edit:dialog"],
        "configuration": "wcm/dialogs/components/richtext/configuration/sidepanel"
      }
    },
    "styleTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Style",
      "cssClasses": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "classes",
        "default": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Default",
          "selected": true,
          "value": ""
        },
        "black": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Checked bullet points",
          "value": "hl-rich-text--checked-bullet-points"
        }
      }
    },
    "gridTab": {
      "sling:resourceType": "wcm/dialogs/components/include",
      "path": "/libs/howlite/components/common/gridTab"
    }
  }
}
